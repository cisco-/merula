    <style amp-custom>
      *, *:before, *:after {
        box-sizing: inherit;
      }
      html {
        box-sizing: border-box;
      }
      @font-face {
        font-family: 'AurelisADFScriptNo2Std-CdIta';
        src: url('fonts/AurelisADFScriptNo2Std-CdIta.eot');
        src: url('fonts/AurelisADFScriptNo2Std-CdIta.woff2') format('woff2'),
             url('fonts/AurelisADFScriptNo2Std-CdIta.woff') format('woff'),
             url('fonts/AurelisADFScriptNo2Std-CdIta.ttf') format('truetype'),
             url('fonts/AurelisADFScriptNo2Std-CdIta.svg#AurelisADFScriptNo2Std-CdIta') format('svg'),
             url('fonts/AurelisADFScriptNo2Std-CdIta.eot?#iefix') format('embedded-opentype');
        font-weight: normal;
        font-style: normal;
      }
      body {
        font-family: 'AurelisADFScriptNo2Std-CdIta', Serif;
      }
      .navigation {
        list-style-type: none;
        margin: 0;
        padding: 0;
        width: 100%;
        display: flex;
        align-items: flex-start;
      }
      .navigation li {
        flex-grow: 1;
        padding-top: 10px;
        padding-left: 10px;
      }
      div.category_header {
        font-size: 1.1em;
        background:transparent;
        border:1px solid #fff;
        color:#bbb;
      }

      .subnavigation {
        background:transparent;
        border:1px solid #fff;
        list-style: none;
        margin: 0;
        padding: 0;
      }
      a {
        font-size: 1.1em;
        text-decoration: none;
        cursor: pointer;
        color:#bbb;
      }
      a.active {
        color: #333;
      }
      a.facebook {
        color: #46b;
      }

      .navigation.bottom {
        margin-top: 7em;
        width:30%;
        min-width: 250px;
      }
      div.quote {
        font-family: 'Gentium Basic', serif;
        font-size: 1.2em;
        background-color: #bbb;
        padding: 5em 5em 13em 10em;
        color: #333;
      }
      div.quote a {
        color: #fff;
      }
      div.quote.center {
        text-align: center
      }
      .top_images {
        padding-left: 10px
      }
      .top_images img {
        padding-left: 20px
      }
      .home {
        display: none;
      }
      .slim {
        display: none;
      }

      .caro {
        margin-left: 1em;
      }
      @media only screen and (min-width: 551px) and (max-width: 700px)  {
        .header-image {
          display: none;
        }
        .home {
          display: block;
        }
        .navigation {
          min-height: 3em;
        }
        div.quote {
          font-size: 1em;
          padding: 2em;
          color: #333;
        }
      }

      @media only screen and (max-width: 550px)  {
        .header-image {
          display: none;
        }
        .home {
          display: none;
        }
        .navigation {
          display: none;
        }
        .slim {
          display: block;
          min-height:3em;
        }

        div.slim-header {
          padding: 10px;
        }

        .slim-navigation {
          list-style-type: none;
          margin: 0;
          margin-top: 1em;
          padding: 0;
          width: 100%;
        }
        .slim-navigation .subnavigation {
            font-size: 1em;
        }

        div.quote {
          font-size: 1em;
          padding: 2em;
          color: #333;
        }

        div.category_header {
          font-size: 1em;
        }

        a {
          font-size: 1em;
        }
      }
    </style>
